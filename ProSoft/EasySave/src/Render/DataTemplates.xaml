<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodel="clr-namespace:EasySave.src.ViewModels"
                    xmlns:view="clr-namespace:EasySave.src.Render.Views">
        
    <!--Data Templates apply Views to ViewModel objects displayed in the UI-->
    
    <!--Home Page-->

    <DataTemplate DataType="{x:Type viewmodel:CryptoSoftSettingsViewModel}">
        <view:CryptoSoftSettingsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:HomeViewModel}">
        <view:HomeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SaveCreateViewModel}">
        <view:SaveCreateView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SaveEditViewModel}">
        <view:SaveEditView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SaveLoadViewModel}">
        <view:SaveLoadView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SaveDeleteViewModel}">
        <view:SaveDeleteView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SettingsChangeLanguageViewModel}">
        <view:SettingsChangeLanguageView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodel:SettingsChangeLogsFormatViewModel}">
        <view:SettingsChangeLogsFormatView/>
    </DataTemplate>

</ResourceDictionary>